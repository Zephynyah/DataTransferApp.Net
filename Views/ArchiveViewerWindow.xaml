<Window x:Class="DataTransferApp.Net.Views.ArchiveViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Archive Contents" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15,10">
            <StackPanel>
                <TextBlock Text="ðŸ“¦ Archive Contents" FontSize="20" FontWeight="Bold" Foreground="White"/>
                <TextBlock x:Name="ArchiveNameText" FontSize="12" Foreground="#BDC3C7" Margin="0,5,0,0"/>
                <TextBlock x:Name="ArchivePathText" FontSize="10" Foreground="#95A5A6" Margin="0,2,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Content -->
        <Border Grid.Row="1" Background="White" Margin="10">
            <DataGrid x:Name="ArchiveDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserSortColumns="True"
                      GridLinesVisibility="Horizontal"
                      AlternationCount="2"
                      AlternatingRowBackground="#F9F9F9">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                    <DataGridTextColumn Header="Path" Binding="{Binding Path}" Width="3*"/>
                    <DataGridTextColumn Header="Size" Binding="{Binding SizeFormatted}" Width="1*"/>
                    <DataGridTextColumn Header="Compressed" Binding="{Binding CompressedSizeFormatted}" Width="1*"/>
                    <DataGridTextColumn Header="Modified" Binding="{Binding Modified}" Width="2*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="15,10">
            <Grid>
                <TextBlock x:Name="StatusText" VerticalAlignment="Center"/>
                <Button Content="Close" Click="CloseButton_Click" Padding="20,8" Background="#7F8C8D" Foreground="White" HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Window>
