<Window x:Class="DataTransferApp.Net.Views.FileViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Viewer" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15,10">
            <StackPanel>
                <TextBlock Text="ðŸ“„ File Contents" FontSize="20" FontWeight="Bold" Foreground="White"/>
                <TextBlock x:Name="FileNameText" FontSize="12" Foreground="#BDC3C7" Margin="0,5,0,0"/>
                <TextBlock x:Name="FilePathText" FontSize="10" Foreground="#95A5A6" Margin="0,2,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Content -->
        <Border Grid.Row="1" Background="White" Margin="10">
            <TextBox x:Name="FileContentTextBox"
                     IsReadOnly="True"
                     TextWrapping="NoWrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     FontFamily="Consolas"
                     FontSize="12"
                     Padding="10"/>
        </Border>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="15,10">
            <Button Content="Close" Click="CloseButton_Click" Padding="20,8" Background="#7F8C8D" Foreground="White" HorizontalAlignment="Right"/>
        </Border>
    </Grid>
</Window>
