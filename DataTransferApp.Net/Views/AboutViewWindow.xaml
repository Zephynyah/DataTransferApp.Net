<Window x:Class="DataTransferApp.Net.Views.AboutViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="About" Height="600" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Logo and Title -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Image Source="/app.png" Width="64" Height="64" Margin="0,0,15,0"/>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="{Binding AppTitle}" FontSize="28" FontWeight="Bold" Foreground="#2C3E50"/>
                <TextBlock Text="{Binding AppVersion}" FontSize="14" Foreground="#7F8C8D"/>
            </StackPanel>
        </StackPanel>

        <!-- Main Content -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="About This Application" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#2C3E50"/>

            <TextBlock TextWrapping="Wrap" FontSize="14" LineHeight="20" Margin="0,0,0,15" Foreground="#34495E">
                <Run Text="The Data Transfer Application is a powerful tool designed to help you manage and transfer files from Dropbox folders to removable drives. It includes comprehensive auditing features to ensure data integrity and compliance."/>
            </TextBlock>

            <TextBlock Text="Key Features:" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#2C3E50"/>

            <StackPanel Margin="20,0,0,0">
                <TextBlock Text="• Automated file auditing and validation" FontSize="14" Margin="0,2"/>
                <TextBlock Text="• Secure transfer to removable drives" FontSize="14" Margin="0,2"/>
                <TextBlock Text="• Real-time progress tracking" FontSize="14" Margin="0,2"/>
                <TextBlock Text="• Transfer history and logging" FontSize="14" Margin="0,2"/>
                <TextBlock Text="• Archive management and compression detection" FontSize="14" Margin="0,2"/>
            </StackPanel>

            <TextBlock Text="System Requirements:" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,10" Foreground="#2C3E50"/>

            <StackPanel Margin="20,0,0,0">
                <TextBlock Text="• Windows 10 or later" FontSize="14" Margin="0,2"/>
                <TextBlock Text="• Minimum 4GB RAM" FontSize="14" Margin="0,2"/>
            </StackPanel>
        </StackPanel>

        <!-- Footer -->
        <StackPanel Grid.Row="2" HorizontalAlignment="Center">
            <TextBlock Text="© 2026 Data Transfer App. All rights reserved." FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,10"/>
            <Button Content="Close" 
                    HorizontalAlignment="Center" 
                    Padding="20,8"
                    Background="#3498DB"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    Click="OkButton_Click"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
