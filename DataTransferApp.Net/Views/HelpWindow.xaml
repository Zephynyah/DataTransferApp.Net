<Window x:Class="DataTransferApp.Net.Views.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
        xmlns:local="clr-namespace:DataTransferApp.Net.Views"
        mc:Ignorable="d"
        Title="Help - Data Transfer Application" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        Icon="/Assets/app.ico">

    <Window.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Margin" Value="0,20,0,10"/>
        </Style>
        <Style x:Key="SubHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
        </Style>
        <Style x:Key="BodyTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="LineHeight" Value="18"/>
        </Style>
        <Style x:Key="ListItemStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="20,5,0,5"/>
            <Setter Property="LineHeight" Value="16"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Logo and Title -->
        <Border Grid.Row="0" Background="{StaticResource DarkBrush}" Padding="15,10">    
            <StackPanel Orientation="Horizontal">
                <fa:IconBlock Icon="QuestionCircle" Foreground="{StaticResource BackgroundBrush}" FontSize="32" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Help" FontSize="20" FontWeight="Bold" Foreground="{StaticResource BackgroundBrush}"/>
                    <TextBlock Text="Comprehensive guide for setup and usage" FontSize="12"  Foreground="{StaticResource LightBrush}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Header -->
                <!-- <Border Background="{StaticResource PrimaryBrush}" CornerRadius="5" Padding="20,15" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <fa:IconBlock Grid.Column="0" Icon="QuestionCircle" Foreground="White" FontSize="32" Margin="0,0,15,0" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Data Transfer Application Help" FontSize="24" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Comprehensive guide for setup and usage" FontSize="14" Foreground="#E8F4FD" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border> -->

                <!-- Introduction -->
                <TextBlock Style="{StaticResource SectionHeaderStyle}">
                    <fa:IconBlock Icon="InfoCircle" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,10,0"/>
                    Introduction
                </TextBlock>
                <TextBlock Style="{StaticResource BodyTextStyle}">
                    The Data Transfer Application is a powerful tool designed to help you efficiently transfer files from Dropbox folders to removable drives. 
                    It includes built-in auditing features to ensure data integrity and compliance with organizational standards.
                </TextBlock>
                <TextBlock Style="{StaticResource BodyTextStyle}">
                    Key features include:
                </TextBlock>
                <StackPanel Margin="20,0,0,10">
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="Dropbox" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        Dropbox integration for folder management
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="Search" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        Comprehensive auditing system
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="Upload" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        Secure file transfer to removable drives
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="ShieldAlt" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        Blacklist and compression detection
                    </TextBlock>
                </StackPanel>

                <!-- System Requirements -->
                <TextBlock Style="{StaticResource SectionHeaderStyle}">
                    <fa:IconBlock Icon="Cogs" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,10,0"/>
                    System Requirements
                </TextBlock>
                <TextBlock Style="{StaticResource SubHeaderStyle}">Minimum Requirements:</TextBlock>
                <StackPanel Margin="20,0,0,10">
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="Windows" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        Windows 10 or later (64-bit)
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="Microchip" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        4 GB RAM
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="Hdd" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        500 MB free disk space
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="Usb" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        USB removable drive support
                    </TextBlock>
                </StackPanel>
                <TextBlock Style="{StaticResource SubHeaderStyle}">Recommended:</TextBlock>
                <StackPanel Margin="20,0,0,10">
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="Microchip" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        8 GB RAM or more
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="Hdd" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        SSD storage for better performance
                    </TextBlock>
                </StackPanel>

                <!-- Installation -->
                <TextBlock Style="{StaticResource SectionHeaderStyle}">
                    <fa:IconBlock Icon="Download" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,10,0"/>
                    Installation
                </TextBlock>
                <TextBlock Style="{StaticResource BodyTextStyle}">
                    Follow these steps to install the Data Transfer Application:
                </TextBlock>
                <StackPanel Margin="20,0,0,10">
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="FileDownload" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        1. Download the application installer from the official source
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="Play" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        2. Run the installer as administrator
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="Check" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        3. Follow the installation wizard prompts
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="Rocket" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        4. Launch the application from the desktop shortcut
                    </TextBlock>
                </StackPanel>

                <!-- First Time Setup -->
                <TextBlock Style="{StaticResource SectionHeaderStyle}">
                    <fa:IconBlock Icon="Wrench" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,10,0"/>
                    First Time Setup
                </TextBlock>
                <TextBlock Style="{StaticResource BodyTextStyle}">
                    Configure the application for your environment:
                </TextBlock>
                <StackPanel Margin="20,0,0,10">
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="Dropbox" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        1. Ensure Dropbox is installed and configured on your system
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="Refresh" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        2. Click "Refresh List" to load available Dropbox folders
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="Usb" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        3. Insert and select your target removable drive
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="Cog" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        4. Configure audit settings if needed
                    </TextBlock>
                </StackPanel>

                <!-- Using the Application -->
                <TextBlock Style="{StaticResource SectionHeaderStyle}">
                    <fa:IconBlock Icon="PlayCircle" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,10,0"/>
                    Using the Application
                </TextBlock>
                <TextBlock Style="{StaticResource SubHeaderStyle}">Folder Management:</TextBlock>
                <StackPanel Margin="20,0,0,10">
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="List" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        Select folders from the left panel
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="Search" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        Use "Audit Folder" to check compliance
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="Eye" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        View detailed audit results and file lists
                    </TextBlock>
                </StackPanel>
                <TextBlock Style="{StaticResource SubHeaderStyle}">File Transfer:</TextBlock>
                <StackPanel Margin="20,0,0,10">
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="Upload" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        Select destination drive from dropdown
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="CheckCircle" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        Ensure audit passes before transfer
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="ExclamationTriangle" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        Use "Override" for special cases (with caution)
                    </TextBlock>
                </StackPanel>

                <!-- Features -->
                <TextBlock Style="{StaticResource SectionHeaderStyle}">
                    <fa:IconBlock Icon="Star" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,10,0"/>
                    Key Features
                </TextBlock>
                <TextBlock Style="{StaticResource SubHeaderStyle}">Auditing System:</TextBlock>
                <StackPanel Margin="20,0,0,10">
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="FolderOpen" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        Folder naming validation
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="Ban" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        Blacklist checking for prohibited files
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="Archive" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        Compressed file detection
                    </TextBlock>
                </StackPanel>
                <TextBlock Style="{StaticResource SubHeaderStyle}">Transfer Options:</TextBlock>
                <StackPanel Margin="20,0,0,10">
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="Copy" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        Bulk transfer of multiple folders
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="History" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        Transfer history tracking
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="FileAlt" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        File content preview
                    </TextBlock>
                </StackPanel>

                <!-- Troubleshooting -->
                <TextBlock Style="{StaticResource SectionHeaderStyle}">
                    <fa:IconBlock Icon="ExclamationTriangle" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,10,0"/>
                    Troubleshooting
                </TextBlock>
                <TextBlock Style="{StaticResource SubHeaderStyle}">Common Issues:</TextBlock>
                <StackPanel Margin="20,0,0,10">
                    <TextBlock Style="{StaticResource ListItemStyle}" FontWeight="SemiBold">
                        <fa:IconBlock Icon="TimesCircle" Foreground="#e74c3c" Margin="0,0,8,0"/>
                        Folders not loading:
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}" Margin="40,0,0,10">
                        Ensure Dropbox is running and folders are accessible. Try clicking "Refresh List".
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}" FontWeight="SemiBold">
                        <fa:IconBlock Icon="TimesCircle" Foreground="#e74c3c" Margin="0,0,8,0"/>
                        Drive not detected:
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}" Margin="40,0,0,10">
                        Check USB connection and try "Detect Drives" button.
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}" FontWeight="SemiBold">
                        <fa:IconBlock Icon="TimesCircle" Foreground="#e74c3c" Margin="0,0,8,0"/>
                        Audit failures:
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}" Margin="40,0,0,10">
                        Review audit details in the folder tooltip. Address naming or content issues.
                    </TextBlock>
                </StackPanel>
                <TextBlock Style="{StaticResource SubHeaderStyle}">Performance Tips:</TextBlock>
                <StackPanel Margin="20,0,0,10">
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="TachometerAlt" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        Close unnecessary applications during large transfers
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="Hdd" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        Use high-speed USB drives for better performance
                    </TextBlock>
                </StackPanel>

                <!-- Support -->
                <TextBlock Style="{StaticResource SectionHeaderStyle}">
                    <fa:IconBlock Icon="LifeRing" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,10,0"/>
                    Support &amp; Contact
                </TextBlock>
                <TextBlock Style="{StaticResource BodyTextStyle}">
                    For additional help or to report issues:
                </TextBlock>
                <StackPanel Margin="20,0,0,10">
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="Envelope" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        Email: support@datatransferapp.com
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="FileAlt" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        Documentation: Check the README.md file
                    </TextBlock>
                    <TextBlock Style="{StaticResource ListItemStyle}">
                        <fa:IconBlock Icon="Bug" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                        Report bugs via GitHub issues
                    </TextBlock>
                </StackPanel>

                <!-- Footer -->
                <Border Background="{StaticResource LightBrush}" CornerRadius="5" Padding="15" Margin="0,20,0,0">
                    <TextBlock Text="Data Transfer Application v1.2.0 - Â© 2024" FontSize="11" Foreground="{StaticResource SecondaryBrush}" HorizontalAlignment="Center"/>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>