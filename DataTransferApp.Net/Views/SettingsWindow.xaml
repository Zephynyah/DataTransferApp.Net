<Window x:Class="DataTransferApp.Net.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:DataTransferApp.Net.Helpers"
        Title="Application Settings" 
        Height="750" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <helpers:ListToStringConverter x:Key="ListToStringConverter"/>
        <helpers:InverseBooleanConverter x:Key="NullToBoolConverter"/>
        <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15,10">
            <TextBlock Text="Application Settings" FontSize="20" FontWeight="Bold" Foreground="White"/>
        </Border>
        
        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                
                <!-- Directory Paths -->
                <GroupBox Header="Directory Paths">
                    <StackPanel>
                        <TextBlock Text="Staging Directory:" Style="{StaticResource SubHeaderTextStyle}"/>
                        <TextBox Text="{Binding StagingDirectory}" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Transfer Records Directory:" Style="{StaticResource SubHeaderTextStyle}"/>
                        <TextBox Text="{Binding TransferRecordsDirectory}" Margin="0,0,0,10"/>

                        <TextBlock Text="Retention Directory:" Style="{StaticResource SubHeaderTextStyle}"/>
                        <TextBox Text="{Binding RetentionDirectory}" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Retention Period (Days):" Style="{StaticResource SubHeaderTextStyle}"/>
                        <TextBox Text="{Binding RetentionDays}" Margin="0,0,0,5"/>
                        <TextBlock Text="Folders older than this will be automatically removed from retention directory on app startup." Style="{StaticResource FootnoteStyle}"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Validation Settings -->
                <GroupBox Header="Validation Rules">
                    <StackPanel>
                        <TextBlock Text="Folder Name Regex Pattern:" Style="{StaticResource SubHeaderTextStyle}"/>
                        <TextBox Text="{Binding FolderNameRegex}" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Blacklisted File Extensions (comma-separated):" Style="{StaticResource SubHeaderTextStyle}"/>
                        <TextBox Text="{Binding BlacklistedExtensions, Converter={StaticResource ListToStringConverter}}" TextWrapping="Wrap" AcceptsReturn="True"/>
                        
                        <TextBlock Text="Whitelisted Datasets (comma-separated):" Style="{StaticResource SubHeaderTextStyle}" Margin="0,10,0,2"/>
                        <TextBox Text="{Binding WhiteListDatasets, Converter={StaticResource ListToStringConverter}}" TextWrapping="Wrap" AcceptsReturn="True"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Excluded Folders -->

                <GroupBox Header="Excluded Folders">
                    <StackPanel>
                        <TextBlock Text="Folders to exclude from staging directory scan (comma-separated):" Style="{StaticResource SubHeaderTextStyle}" Margin="0,10,0,2"/>
                        <TextBox Text="{Binding ExcludedFolders, Converter={StaticResource ListToStringConverter}}" TextWrapping="Wrap" AcceptsReturn="True"/>
                        <TextBlock Text="Folder names are case-insensitive. Excluded folders will not appear in the staging list. Use wildcards (*) for pattern matching."  Style="{StaticResource FootnoteStyle}" Margin="0"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Startup Behavior -->
                <GroupBox Header="Startup Behavior">
                    <StackPanel>
                        <CheckBox Content="Automatically run audit on all folders at startup" 
                                  IsChecked="{Binding AutoAuditOnStartup}" 
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="When enabled, the application will automatically audit all folders immediately after loading them." 
                                   Style="{StaticResource FootnoteStyle}"
                                   Margin="20,0,0,0"/>

                                                           
                        <TextBlock Text="Window Startup Mode" FontWeight="SemiBold" Margin="0,5,0,5"/>
                        <ComboBox SelectedValue="{Binding WindowStartupMode, Mode=TwoWay}" 
                                  SelectedValuePath="Content" 
                                  Margin="0,0,0,5">
                            <ComboBoxItem Content="Normal" />
                            <ComboBoxItem Content="Maximized" />
                            <ComboBoxItem Content="Fullscreen" />
                        </ComboBox>
                        <TextBlock Text="Normal: Default window size. Maximized: Full screen with title bar. Fullscreen: Full screen without borders (press F11 to toggle)."
                                   Style="{StaticResource FootnoteStyle}"
                                   Margin="0,0,0,10"/>

                        <!-- Exclude Drives -->
                        <TextBlock Text="Exclude Drives (comma-separated, e.g., C:\, D:\):" Style="{StaticResource SubHeaderTextStyle}"/>
                        <TextBox Text="{Binding ExcludeDrives, Converter={StaticResource ListToStringConverter}}"  TextWrapping="Wrap" Margin="0,0,0,5"/>
                        <TextBlock Text="These drives will not appear in the removable drives list. Use backslash format (e.g., C:\, D:\)." Style="{StaticResource FootnoteStyle}" Margin="0,0,0,10"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- UI Display Options -->
                <GroupBox Header="Display Options">
                    <StackPanel>
                        <CheckBox Content="Show audit details icon in folder list" 
                                  IsChecked="{Binding ShowFolderAuditDetailsIcon}" 
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="When enabled, folders with audit failures will display an information icon showing detailed audit statistics."
                                   Style="{StaticResource FootnoteStyle}"
                                   Margin="20,0,0,10"/>
                        
                        <CheckBox Content="Display audit summary as colored cards" 
                                  IsChecked="{Binding ShowAuditSummaryAsCards}" 
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="When enabled, audit summaries will be displayed as colored badge cards. When disabled, they will show as simple colored text with icons."
                                   Style="{StaticResource FootnoteStyle}"
                                   Margin="20,0,0,10"/>

                        
                        <CheckBox Content="Show success notifications" 
                                  IsChecked="{Binding ShowSuccessNotifications}" 
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="When enabled, the application will show notification messages for successful operations."
                                   Style="{StaticResource FootnoteStyle}"
                                   Margin="20,0,0,0"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Application Logging -->
                <GroupBox Header="Application Logging">
                    <StackPanel>
                        <CheckBox Content="Enable Application File Logging" IsChecked="{Binding EnableFileLogging}" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Log Level:" Style="{StaticResource SubHeaderTextStyle}"/>
                        <ComboBox SelectedValue="{Binding LogLevel}" SelectedValuePath="Content" Margin="0,0,0,10">
                            <ComboBoxItem Content="Debug"/>
                            <ComboBoxItem Content="Info"/>
                            <ComboBoxItem Content="Warning"/>
                            <ComboBoxItem Content="Error"/>
                        </ComboBox>
                        
                        <TextBlock Text="Log Format:" Style="{StaticResource SubHeaderTextStyle}"/>
                        <ComboBox SelectedValue="{Binding LogFormat}" SelectedValuePath="Content" Margin="0,0,0,10">
                            <ComboBoxItem Content="JSON"/>
                            <ComboBoxItem Content="CSV"/>
                            <ComboBoxItem Content="TXT"/>
                        </ComboBox>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                <TextBlock Text="Max Log Size (MB):" Style="{StaticResource SubHeaderTextStyle}"/>
                                <TextBox Text="{Binding MaxLogSizeMB}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                <TextBlock Text="Keep Log Files:" Style="{StaticResource SubHeaderTextStyle}"/>
                                <TextBox Text="{Binding KeepLogFiles}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                
                <!-- Transfer History Database -->
                <GroupBox Header="Transfer History Database">
                    <StackPanel>
                        <TextBlock Text="Database Storage Location:" Style="{StaticResource SubHeaderTextStyle}"/>
                        <TextBox Text="{Binding TransferHistoryDatabasePath}" Margin="0,0,0,5" 
                                 ToolTip="Leave empty to use automatic location (shared or local)"/>
                        <TextBlock Text="Leave empty to automatically select shared or local location based on permissions."
                                   Style="{StaticResource FootnoteStyle}"
                                   Margin="0,0,0,10"/>
                        
                        <CheckBox Content="Use Shared Database Location (All Users)" 
                                  IsChecked="{Binding UseSharedDatabaseLocation}" 
                                  Margin="0,0,0,5"
                                  ToolTip="Stores database in ProgramData for all users to access"/>
                        <TextBlock Text="When enabled, database will be stored in %ProgramData%\DataTransferApp\ for multi-user access."
                                   Style="{StaticResource FootnoteStyle}"
                                   Margin="20,0,0,10"/>
                        
                        <TextBlock Style="{StaticResource FootnoteStyle}" Foreground="#3498db" Margin="0,0,0,5">
                            üí° Database provides 50-200x faster queries than JSON files and supports multi-user access.
                        </TextBlock>
                    </StackPanel>
                </GroupBox>
                
                <!-- Compliance Records -->
                <GroupBox Header="Compliance Records &amp; Transfer Documentation">
                    <StackPanel>
                        <CheckBox Content="Generate Compliance Records for Each Transfer" 
                                  IsChecked="{Binding GenerateComplianceRecords}" 
                                  Margin="0,0,0,10"
                                  ToolTip="Automatically generate compliance records for regulatory audits"/>
                        
                        <TextBlock Text="Compliance Record Type:" Style="{StaticResource SubHeaderTextStyle}"/>
                        <ComboBox SelectedValue="{Binding ComplianceRecordType}" 
                                  SelectedValuePath="Content" 
                                  Margin="0,0,0,10" 
                                  IsEnabled="{Binding GenerateComplianceRecords}">
                            <ComboBoxItem Content="Standard"/>
                            <ComboBoxItem Content="Comprehensive"/>
                        </ComboBox>
                        <TextBlock Text="Standard: Tabular format with file-level details. Comprehensive: Detailed transfer summary with sections."
                                   Style="{StaticResource FootnoteStyle}"
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Compliance Record Format:" Style="{StaticResource SubHeaderTextStyle}"/>
                        <ComboBox SelectedValue="{Binding ComplianceRecordFormat}" 
                                  SelectedValuePath="Content" 
                                  Margin="0,0,0,10" 
                                  IsEnabled="{Binding GenerateComplianceRecords}">
                            <ComboBoxItem Content="CSV"/>
                            <ComboBoxItem Content="TXT"/>
                            <ComboBoxItem Content="Excel"/>
                            <ComboBoxItem Content="JSON"/>
                        </ComboBox>
                        
                        <TextBlock Text="Source Location:" Style="{StaticResource SubHeaderTextStyle}"/>
                        <TextBox Text="{Binding ComplianceSourceLocation}" 
                                 Margin="0,0,0,10" 
                                 IsEnabled="{Binding GenerateComplianceRecords}"
                                 ToolTip="Source location name for compliance records (e.g., Unclassified Corporate Network)"/>
                        
                        <CheckBox Content="Calculate File Hashes for Verification" 
                                  IsChecked="{Binding CalculateFileHashes}" 
                                  IsEnabled="{Binding GenerateComplianceRecords}" 
                                  Margin="0,0,0,10"
                                  ToolTip="Generate cryptographic hashes for file integrity verification"/>
                        
                        <TextBlock Text="Hash Algorithm:" Style="{StaticResource SubHeaderTextStyle}"/>
                        <ComboBox SelectedValue="{Binding HashAlgorithm}" 
                                  SelectedValuePath="Content" 
                                  Margin="0,0,0,10" 
                                  IsEnabled="{Binding CalculateFileHashes}">
                            <ComboBoxItem Content="SHA256"/>
                            <ComboBoxItem Content="SHA512"/>
                            <ComboBoxItem Content="SHA1"/>
                            <ComboBoxItem Content="MD5"/>
                        </ComboBox>
                        
                        <TextBlock FontSize="10" Foreground="#e74c3c" TextWrapping="Wrap" Margin="0,0,0,5">
                            ‚ö†Ô∏è Compliance records are required for regulatory audits. Records are automatically generated on transfer completion.
                        </TextBlock>
                    </StackPanel>
                </GroupBox>
                
                <!-- Transfer Settings -->
                <GroupBox Header="Transfer Options">
                    <StackPanel>
                        <CheckBox Content="Enable Compression" IsChecked="{Binding EnableCompression}" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Minimum Free Space on Drive (GB):" Style="{StaticResource SubHeaderTextStyle}"/>
                        <TextBox Text="{Binding MinimumFreeSpaceGB}" Margin="0,0,0,0"/>
                        
                        <Separator Margin="0,10,0,10"/>
                        
                        <TextBlock Text="Conflict Handling" FontWeight="Bold" FontSize="13" Margin="0,5,0,5"/>
                        <CheckBox Content="Automatically Handle Folder Conflicts" IsChecked="{Binding AutoHandleConflicts}" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Conflict Resolution Strategy:" Style="{StaticResource SubHeaderTextStyle}"/>
                        <ComboBox SelectedValue="{Binding ConflictResolution}" SelectedValuePath="Content" Margin="0,0,0,5" IsEnabled="{Binding AutoHandleConflicts}">
                            <ComboBoxItem Content="AppendSequence"/>
                            <ComboBoxItem Content="Skip"/>
                            <ComboBoxItem Content="Overwrite"/>
                        </ComboBox>
                        <TextBlock Style="{StaticResource FootnoteStyle}" Margin="0,0,0,10">
                            ‚Ä¢ AppendSequence: Add sequence number to duplicate folders (e.g., Folder_1)
                            <LineBreak/>
                            ‚Ä¢ Skip: Do not transfer if folder already exists on drive
                            <LineBreak/>
                            ‚Ä¢ Overwrite: Replace existing folder with new transfer
                        </TextBlock>
                        
                        <CheckBox Content="Prompt Before Overwriting Existing Data" IsChecked="{Binding PromptBeforeOverwrite}" IsEnabled="{Binding AutoHandleConflicts}" Margin="0,0,0,10"/>
                    </StackPanel>
                </GroupBox>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="{StaticResource LightBackgroundBrush}" Padding="15,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="ResetButton" Click="ResetButton_Click" Style="{StaticResource ButtonStyle}" Background="{StaticResource WarningBrush}">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="{StaticResource RefreshIconGeometry}" Fill="White" Width="14" Height="14" Stretch="Uniform" Margin="0,0,5,0"/>
                        <TextBlock Text="Reset to Defaults" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="CancelButton" Click="CancelButton_Click" Style="{StaticResource ButtonStyle}" Background="{StaticResource SecondaryBrush}">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="{StaticResource CloseIconGeometry}" Fill="White" Width="14" Height="14" Stretch="Uniform" Margin="0,0,5,0"/>
                        <TextBlock Text="Cancel" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="SaveButton" Click="SaveButton_Click" Style="{StaticResource SuccessButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="{StaticResource SaveIconGeometry}" Fill="White" Width="14" Height="14" Stretch="Uniform" Margin="0,0,5,0"/>
                        <TextBlock Text="Save Settings" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
