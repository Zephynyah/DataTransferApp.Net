<Window x:Class="DataTransferApp.Net.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:DataTransferApp.Net.Helpers"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:local="clr-namespace:DataTransferApp.Net.Views"
        xmlns:control="clr-namespace:DataTransferApp.Net.Controls"
        Title="Application Settings" 
        Height="750" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <!-- Validation Error Style -->
        <Style x:Key="ValidatingTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Logo and Title -->
        <Border Grid.Row="0" Background="{StaticResource DarkBrush}" Padding="15,10">    
            <StackPanel Orientation="Horizontal">
                <fa:IconBlock Icon="Cog" Foreground="{StaticResource BackgroundBrush}" FontSize="32" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Application Settings" FontSize="20" FontWeight="Bold" Foreground="{StaticResource BackgroundBrush}"/>
                    <TextBlock Text="Configure application preferences and behavior" FontSize="12"  Foreground="{StaticResource LightBrush}"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                
                <!-- Directory Paths -->
                <GroupBox Header="Directory Paths">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SubHeaderTextStyle}">
                            <InlineUIContainer>
                                <fa:IconBlock Icon="InfoCircle" Foreground="{StaticResource InfoBrush}" FontSize="12" Margin="0,0,2,0" >
                                    <fa:IconBlock.ToolTip >
                                        <ToolTip Background="Transparent" BorderThickness="0">
                                            <control:AwesomeToolTip Title="Staging Directory" Description="The main dropbox directory where files are staged for transfer." />
                                        </ToolTip>
                                    </fa:IconBlock.ToolTip>
                                </fa:IconBlock>
                            </InlineUIContainer>
                            <Run Text="Staging Directory:"/>
                        </TextBlock>

                        <TextBox Grid.ColumnSpan="2" Text="{Binding StagingDirectory, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged}"  Style="{StaticResource ValidatingTextBoxStyle}" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Transfer Records Directory:" Style="{StaticResource SubHeaderTextStyle}"/>
                        <TextBox Text="{Binding TransferRecordsDirectory, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged}"   Style="{StaticResource ValidatingTextBoxStyle}" Margin="0,0,0,10"/>

                        <TextBlock Text="Retention Directory:" Style="{StaticResource SubHeaderTextStyle}"/>
                        <TextBox Text="{Binding RetentionDirectory, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged}"  Style="{StaticResource ValidatingTextBoxStyle}" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Retention Period (Days):" Style="{StaticResource SubHeaderTextStyle}"/>
                        <TextBox Text="{Binding RetentionDays, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged}"  Style="{StaticResource ValidatingTextBoxStyle}" Margin="0,0,0,5"/>
                        <TextBlock Text="Folders older than this will be automatically removed from retention directory on app startup, or manually triggered from the main menu" Style="{StaticResource FootnoteStyle}"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Validation Settings -->
                <GroupBox Header="Validation Rules">
                    <StackPanel>
                        <TextBlock Text="Folder Name Regex Pattern:" Style="{StaticResource SubHeaderTextStyle}"/>
                        <TextBox Text="{Binding FolderNameRegex}" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Blacklisted File Extensions (comma-separated):" Style="{StaticResource SubHeaderTextStyle}"/>
                        <TextBox Text="{Binding BlacklistedExtensions, Converter={StaticResource ListToStringConverter}}" TextWrapping="Wrap" AcceptsReturn="True"/>
                        
                        <TextBlock Text="Whitelisted Datasets (comma-separated):" Style="{StaticResource SubHeaderTextStyle}" Margin="0,10,0,2"/>
                        <TextBox Text="{Binding WhiteListDatasets, Converter={StaticResource ListToStringConverter}}" TextWrapping="Wrap" AcceptsReturn="True"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Excluded Folders -->

                <GroupBox Header="Excluded Folders">
                    <StackPanel>
                        <TextBlock Text="Folders to exclude from staging directory scan (comma-separated):" Style="{StaticResource SubHeaderTextStyle}" Margin="0,10,0,2"/>
                        <TextBox Text="{Binding ExcludedFolders, Converter={StaticResource ListToStringConverter}}" TextWrapping="Wrap" AcceptsReturn="True"/>
                        <TextBlock Text="Folder names are case-insensitive. Excluded folders will not appear in the staging list. Use wildcards (*) for pattern matching."  Style="{StaticResource FootnoteStyle}" Margin="0"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Startup Behavior -->
                <GroupBox Header="Startup Behavior">
                    <StackPanel>
                        <CheckBox Content="Automatically run audit on all folders at startup" 
                                  IsChecked="{Binding AutoAuditOnStartup}" 
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="When enabled, the application will automatically audit all folders immediately after loading them." 
                                   Style="{StaticResource FootnoteStyle}"
                                   Margin="20,0,0,0"/>

                                                           
                        <TextBlock Text="Window Startup Mode" FontWeight="SemiBold" Margin="0,5,0,5"/>
                        <ComboBox SelectedValue="{Binding WindowStartupMode, Mode=TwoWay}" 
                                  SelectedValuePath="Content" 
                                  Margin="0,0,0,5">
                            <ComboBoxItem Content="Normal" />
                            <ComboBoxItem Content="Maximized" />
                            <ComboBoxItem Content="Fullscreen" />
                        </ComboBox>
                        <TextBlock Text="Normal: Default window size. Maximized: Full screen with title bar. Fullscreen: Full screen without borders (press F11 to toggle)."
                                   Style="{StaticResource FootnoteStyle}"
                                   Margin="0,0,0,10"/>

                        <!-- Exclude Drives -->
                        <TextBlock Text="Exclude Drives (comma-separated, e.g., C:\, D:\):" Style="{StaticResource SubHeaderTextStyle}"/>
                        <TextBox Text="{Binding ExcludeDrives, Converter={StaticResource ListToStringConverter}}"  TextWrapping="Wrap" Margin="0,0,0,5"/>
                        <TextBlock Text="These drives will not appear in the removable drives list. Use backslash format (e.g., C:\, D:\)." Style="{StaticResource FootnoteStyle}" Margin="0,0,0,10"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- UI Display Options -->
                <GroupBox Header="Display Options">
                    <StackPanel>
                        <CheckBox Content="Show audit details icon in folder list" 
                                  IsChecked="{Binding ShowFolderAuditDetailsIcon}" 
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="When enabled, folders with audit failures will display an information icon showing detailed audit statistics."
                                   Style="{StaticResource FootnoteStyle}"
                                   Margin="20,0,0,10"/>
                        
                        <CheckBox Content="Display audit summary as colored cards" 
                                  IsChecked="{Binding ShowAuditSummaryAsCards}" 
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="When enabled, audit summaries will be displayed as colored badge cards. When disabled, they will show as simple colored text with icons."
                                   Style="{StaticResource FootnoteStyle}"
                                   Margin="20,0,0,10"/>

                        
                        <CheckBox Content="Show success notifications" 
                                  IsChecked="{Binding ShowSuccessNotifications}" 
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="When enabled, the application will show notification messages for successful operations."
                                   Style="{StaticResource FootnoteStyle}"
                                   Margin="20,0,0,0"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Application Logging -->
                <GroupBox Header="Application Logging">
                    <StackPanel>
                        <CheckBox Content="Enable Application File Logging" IsChecked="{Binding EnableFileLogging}" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Log Level:" Style="{StaticResource SubHeaderTextStyle}"/>
                        <ComboBox SelectedValue="{Binding LogLevel}" SelectedValuePath="Content" Margin="0,0,0,10">
                            <ComboBoxItem Content="Debug"/>
                            <ComboBoxItem Content="Info"/>
                            <ComboBoxItem Content="Warning"/>
                            <ComboBoxItem Content="Error"/>
                        </ComboBox>
                        
                        <TextBlock Text="Log Format:" Style="{StaticResource SubHeaderTextStyle}"/>
                        <ComboBox SelectedValue="{Binding LogFormat}" SelectedValuePath="Content" Margin="0,0,0,10">
                            <ComboBoxItem Content="JSON"/>
                            <ComboBoxItem Content="CSV"/>
                            <ComboBoxItem Content="TXT"/>
                        </ComboBox>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                <TextBlock Text="Max Log Size (MB):" Style="{StaticResource SubHeaderTextStyle}"/>
                                <TextBox Text="{Binding MaxLogSizeMB}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                <TextBlock Text="Keep Log Files:" Style="{StaticResource SubHeaderTextStyle}"/>
                                <TextBox Text="{Binding KeepLogFiles}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                
                <!-- Transfer History Database -->
                <GroupBox Header="Transfer History Database">
                    <StackPanel>
                        <TextBlock Text="Database Storage Location:" Style="{StaticResource SubHeaderTextStyle}"/>
                        <TextBox Text="{Binding TransferHistoryDatabasePath}" Margin="0,0,0,5" 
                                 ToolTip="Leave empty to use automatic location (shared or local)"/>
                        <TextBlock Text="Leave empty to automatically select shared or local location based on permissions."
                                   Style="{StaticResource FootnoteStyle}"
                                   Margin="0,0,0,10"/>
                        
                        <CheckBox Content="Use Shared Database Location (All Users)" 
                                  IsChecked="{Binding UseSharedDatabaseLocation}" 
                                  Margin="0,0,0,5"
                                  ToolTip="Stores database in ProgramData for all users to access"/>
                        <TextBlock Text="When enabled, database will be stored in %ProgramData%\DataTransferApp\ for multi-user access."
                                   Style="{StaticResource FootnoteStyle}"
                                   Margin="20,0,0,10"/>
                        
                        <TextBlock Style="{StaticResource FootnoteStyle}" Foreground="#3498db" Margin="0,0,0,5">
                            üí° Database provides 50-200x faster queries than JSON files and supports multi-user access.
                        </TextBlock>
                    </StackPanel>
                </GroupBox>
                
                <!-- Compliance Records -->
                <GroupBox Header="Compliance Records &amp; Transfer Documentation">
                    <StackPanel>
                        <CheckBox Content="Generate Compliance Records for Each Transfer" 
                                  IsChecked="{Binding GenerateComplianceRecords}" 
                                  Margin="0,0,0,10"
                                  ToolTip="Automatically generate compliance records for regulatory audits"/>
                        
                        <TextBlock Text="Compliance Record Type:" Style="{StaticResource SubHeaderTextStyle}"/>
                        <ComboBox SelectedValue="{Binding ComplianceRecordType}" 
                                  SelectedValuePath="Content" 
                                  Margin="0,0,0,10" 
                                  IsEnabled="{Binding GenerateComplianceRecords}">
                            <ComboBoxItem Content="Standard"/>
                            <ComboBoxItem Content="Comprehensive"/>
                        </ComboBox>
                        <TextBlock Text="Standard: Tabular format with file-level details. Comprehensive: Detailed transfer summary with sections."
                                   Style="{StaticResource FootnoteStyle}"
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Compliance Record Format:" Style="{StaticResource SubHeaderTextStyle}"/>
                        <ComboBox SelectedValue="{Binding ComplianceRecordFormat}" 
                                  SelectedValuePath="Content" 
                                  Margin="0,0,0,10" 
                                  IsEnabled="{Binding GenerateComplianceRecords}">
                            <ComboBoxItem Content="CSV"/>
                            <ComboBoxItem Content="TXT"/>
                            <ComboBoxItem Content="Excel"/>
                            <ComboBoxItem Content="JSON"/>
                        </ComboBox>
                        
                        <TextBlock Text="Source Location:" Style="{StaticResource SubHeaderTextStyle}"/>
                        <TextBox Text="{Binding ComplianceSourceLocation}" 
                                 Margin="0,0,0,10" 
                                 IsEnabled="{Binding GenerateComplianceRecords}"
                                 ToolTip="Source location name for compliance records (e.g., Unclassified Corporate Network)"/>
                        
                        <CheckBox Content="Calculate File Hashes for Verification" 
                                  IsChecked="{Binding CalculateFileHashes}" 
                                  IsEnabled="{Binding GenerateComplianceRecords}" 
                                  Margin="0,0,0,10"
                                  ToolTip="Generate cryptographic hashes for file integrity verification"/>
                        
                        <TextBlock Text="Hash Algorithm:" Style="{StaticResource SubHeaderTextStyle}"/>
                        <ComboBox SelectedValue="{Binding HashAlgorithm}" 
                                  SelectedValuePath="Content" 
                                  Margin="0,0,0,10" 
                                  IsEnabled="{Binding CalculateFileHashes}">
                            <ComboBoxItem Content="SHA256"/>
                            <ComboBoxItem Content="SHA512"/>
                            <ComboBoxItem Content="SHA1"/>
                            <ComboBoxItem Content="MD5"/>
                        </ComboBox>
                        
                        <TextBlock FontSize="10" Foreground="#e74c3c" TextWrapping="Wrap" Margin="0,0,0,5">
                            ‚ö†Ô∏è Compliance records are required for regulatory audits. Records are automatically generated on transfer completion.
                        </TextBlock>
                    </StackPanel>
                </GroupBox>
                
                <!-- Transfer Settings -->
                <GroupBox Header="Transfer Options">
                    <StackPanel>
                        <CheckBox Content="Enable Compression" IsChecked="{Binding EnableCompression}" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Minimum Free Space on Drive (GB):" Style="{StaticResource SubHeaderTextStyle}"/>
                        <TextBox Text="{Binding MinimumFreeSpaceGB}" Margin="0,0,0,0"/>
                        
                        <Separator Margin="0,10,0,10"/>
                        
                        <TextBlock Text="Conflict Handling" FontWeight="Bold" FontSize="13" Margin="0,5,0,5"/>
                        <CheckBox Content="Automatically Handle Folder Conflicts" IsChecked="{Binding AutoHandleConflicts}" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Conflict Resolution Strategy:" Style="{StaticResource SubHeaderTextStyle}"/>
                        <ComboBox SelectedValue="{Binding ConflictResolution}" SelectedValuePath="Content" Margin="0,0,0,5" IsEnabled="{Binding AutoHandleConflicts}">
                            <ComboBoxItem Content="AppendSequence"/>
                            <ComboBoxItem Content="Skip"/>
                            <ComboBoxItem Content="Overwrite"/>
                        </ComboBox>
                        <TextBlock Style="{StaticResource FootnoteStyle}" Margin="0,0,0,10">
                            ‚Ä¢ AppendSequence: Add sequence number to duplicate folders (e.g., Folder_1)
                            <LineBreak/>
                            ‚Ä¢ Skip: Do not transfer if folder already exists on drive
                            <LineBreak/>
                            ‚Ä¢ Overwrite: Replace existing folder with new transfer
                        </TextBlock>
                        
                        <CheckBox Content="Prompt Before Overwriting Existing Data" IsChecked="{Binding PromptBeforeOverwrite}" IsEnabled="{Binding AutoHandleConflicts}" Margin="0,0,0,10"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- RoboSharp Transfer Engine -->
                <GroupBox Header="RoboSharp Transfer Engine (Advanced)">
                    <StackPanel>
                        <CheckBox Content="Use RoboSharp for File Transfers" 
                                  IsChecked="{Binding UseRoboSharp}" 
                                  Margin="0,0,0,10"
                                  ToolTip="Enables high-performance file transfers using Robocopy engine"/>
                        
                        <TextBlock Style="{StaticResource FootnoteStyle}" Foreground="#3498db" TextWrapping="Wrap" Margin="0,0,0,10">
                            üí° RoboSharp uses Microsoft Robocopy for enterprise-grade file transfers with multi-threading, automatic retries, and detailed progress tracking. Ideal for large transfers and network operations.
                        </TextBlock>
                        
                        <Separator Margin="0,5,0,10"/>
                        
                        <!-- Configuration Presets -->
                        <TextBlock Text="Configuration Presets" FontWeight="Bold" FontSize="13" Margin="0,0,0,5"/>
                        <TextBlock Text="Select a preset or configure manually. Performance controls are read-only when using presets."
                                   Style="{StaticResource FootnoteStyle}"
                                   Margin="0,0,0,5"/>
                        
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Manual Mode -->
                            <RadioButton Grid.Row="0" Grid.Column="0"
                                         GroupName="RoboSharpPreset"
                                         IsChecked="{Binding RoboSharpPresetMode, Converter={StaticResource RadioButtonCheckedConverter}, ConverterParameter=Manual}"
                                         IsEnabled="{Binding UseRoboSharp}"
                                         Margin="0,0,10,5"
                                         ToolTip="Configure all settings manually">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconBlock Icon="Cog" FontSize="12" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Manual" VerticalAlignment="Center"/>
                                </StackPanel>
                            </RadioButton>
                            <TextBlock Grid.Row="0" Grid.Column="1"
                                       Text="Full control over all performance and reliability settings"
                                       Style="{StaticResource FootnoteStyle}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,0,5"/>
                            
                            <!-- Fast Preset -->
                            <RadioButton Grid.Row="1" Grid.Column="0"
                                         GroupName="RoboSharpPreset"
                                         IsChecked="{Binding RoboSharpPresetMode, Converter={StaticResource RadioButtonCheckedConverter}, ConverterParameter=Fast}"
                                         IsEnabled="{Binding UseRoboSharp}"
                                         Checked="ApplyFastPreset_Checked"
                                         Margin="0,0,10,5"
                                         ToolTip="Max speed for local transfers">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconBlock Icon="Bolt" FontSize="12" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Fast" VerticalAlignment="Center"/>
                                </StackPanel>
                            </RadioButton>
                            <TextBlock Grid.Row="1" Grid.Column="1"
                                       Text="16 threads ‚Ä¢ 3 retries ‚Ä¢ 5s wait ‚Ä¢ No verification"
                                       Style="{StaticResource FootnoteStyle}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,0,5"/>
                            
                            <!-- Safe Preset -->
                            <RadioButton Grid.Row="2" Grid.Column="0"
                                         GroupName="RoboSharpPreset"
                                         IsChecked="{Binding RoboSharpPresetMode, Converter={StaticResource RadioButtonCheckedConverter}, ConverterParameter=Safe}"
                                         IsEnabled="{Binding UseRoboSharp}"
                                         Checked="ApplySafePreset_Checked"
                                         Margin="0,0,10,5"
                                         ToolTip="Balanced settings with verification">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconBlock Icon="Shield" FontSize="12" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Safe" VerticalAlignment="Center"/>
                                </StackPanel>
                            </RadioButton>
                            <TextBlock Grid.Row="2" Grid.Column="1"
                                       Text="8 threads ‚Ä¢ 5 retries ‚Ä¢ 10s wait ‚Ä¢ Restartable ‚Ä¢ Backup mode ‚Ä¢ Logging"
                                       Style="{StaticResource FootnoteStyle}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,0,5"/>
                            
                            <!-- Network Preset -->
                            <RadioButton Grid.Row="3" Grid.Column="0"
                                         GroupName="RoboSharpPreset"
                                         IsChecked="{Binding RoboSharpPresetMode, Converter={StaticResource RadioButtonCheckedConverter}, ConverterParameter=Network}"
                                         IsEnabled="{Binding UseRoboSharp}"
                                         Checked="ApplyNetworkPreset_Checked"
                                         Margin="0,0,10,5"
                                         ToolTip="Optimized for unreliable networks">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconBlock Icon="Globe" FontSize="12" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Network" VerticalAlignment="Center"/>
                                </StackPanel>
                            </RadioButton>
                            <TextBlock Grid.Row="3" Grid.Column="1"
                                       Text="4 threads ‚Ä¢ 10 retries ‚Ä¢ 30s wait ‚Ä¢ Restartable ‚Ä¢ Backup mode ‚Ä¢ Verification"
                                       Style="{StaticResource FootnoteStyle}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,0,5"/>
                            
                            <!-- Archive Preset -->
                            <RadioButton Grid.Row="4" Grid.Column="0"
                                         GroupName="RoboSharpPreset"
                                         IsChecked="{Binding RoboSharpPresetMode, Converter={StaticResource RadioButtonCheckedConverter}, ConverterParameter=Archive}"
                                         IsEnabled="{Binding UseRoboSharp}"
                                         Checked="ApplyArchivePreset_Checked"
                                         Margin="0,0,10,0"
                                         ToolTip="High integrity with full verification">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconBlock Icon="Archive" FontSize="12" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Archive" VerticalAlignment="Center"/>
                                </StackPanel>
                            </RadioButton>
                            <TextBlock Grid.Row="4" Grid.Column="1"
                                       Text="8 threads ‚Ä¢ 5 retries ‚Ä¢ 10s wait ‚Ä¢ Restartable ‚Ä¢ Backup ‚Ä¢ Verification ‚Ä¢ Verbose ‚Ä¢ Full logging"
                                       Style="{StaticResource FootnoteStyle}"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        
                        <Separator Margin="0,5,0,10"/>
                        
                        <TextBlock Text="Performance Settings" FontWeight="Bold" FontSize="13" Margin="0,0,0,5"/>
                        <TextBlock Text="Available only in Manual mode. Preset configurations are read-only."
                                   Style="{StaticResource FootnoteStyle}"
                                   Foreground="#95a5a6"
                                   Margin="0,0,0,5"/>
                        
                        <TextBlock Text="Thread Count:" Style="{StaticResource SubHeaderTextStyle}"/>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider Grid.Column="0" 
                                    Minimum="1" Maximum="16" 
                                    Value="{Binding RobocopyThreadCount, Mode=TwoWay}" 
                                    TickFrequency="1" 
                                    IsSnapToTickEnabled="True"
                                    VerticalAlignment="Center"
                                    IsEnabled="{Binding RoboSharpPresetMode, Converter={StaticResource PresetModeToEnabledConverter}}"/>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding RobocopyThreadCount}" 
                                       VerticalAlignment="Center" 
                                       Margin="10,0,0,0" 
                                       MinWidth="30"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryBrush}"/>
                        </Grid>
                        <TextBlock Text="Number of concurrent file copy operations. Higher values improve speed for many small files. Default: 8 Maximum: 16."
                                   Style="{StaticResource FootnoteStyle}"
                                   Margin="0,0,0,10"/>
                        
                        <Separator Margin="0,5,0,10"/>
                        
                        <TextBlock Text="Reliability Settings" FontWeight="Bold" FontSize="13" Margin="0,0,0,5"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                <TextBlock Text="Retry Count:" Style="{StaticResource SubHeaderTextStyle}"/>
                                <TextBox Text="{Binding RobocopyRetries, Mode=TwoWay}" 
                                         IsEnabled="{Binding RoboSharpPresetMode, Converter={StaticResource PresetModeToEnabledConverter}}"
                                         ToolTip="Number of retry attempts for failed operations"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                <TextBlock Text="Retry Wait (seconds):" Style="{StaticResource SubHeaderTextStyle}"/>
                                <TextBox Text="{Binding RobocopyRetryWaitSeconds, Mode=TwoWay}" 
                                         IsEnabled="{Binding RoboSharpPresetMode, Converter={StaticResource PresetModeToEnabledConverter}}"
                                         ToolTip="Wait time between retry attempts"/>
                            </StackPanel>
                        </Grid>
                        <TextBlock Text="Automatic retry on transient failures (network issues, file locks, etc.)"
                                   Style="{StaticResource FootnoteStyle}"
                                   Margin="0,5,0,10"/>
                        
                        <Separator Margin="0,5,0,10"/>
                        
                        <TextBlock Text="Logging &amp; Monitoring" FontWeight="Bold" FontSize="13" Margin="0,0,0,5"/>
                        
                        <CheckBox Content="Enable Verbose Output" 
                                  IsChecked="{Binding RobocopyVerboseOutput}" 
                                  IsEnabled="{Binding UseRoboSharp}"
                                  Margin="0,0,0,5"
                                  ToolTip="Show detailed file-by-file progress information"/>
                        <TextBlock Text="Shows detailed progress for each file. Provides more information but may impact performance with many small files."
                                   Style="{StaticResource FootnoteStyle}"
                                   Margin="20,0,0,10"/>
                        
                        <CheckBox Content="Generate Transfer Logs" 
                                  IsChecked="{Binding RobocopyDetailedLogging}" 
                                  IsEnabled="{Binding UseRoboSharp}"
                                  Margin="0,0,0,5"
                                  ToolTip="Save detailed Robocopy logs for each transfer"/>
                        <TextBlock Text="Logs are saved in the Transfer Records directory for troubleshooting and audit purposes."
                                   Style="{StaticResource FootnoteStyle}"
                                   Margin="20,0,0,10"/>
                        
                        <TextBlock FontSize="10" Foreground="#e67e22" TextWrapping="Wrap" Margin="0,5,0,0">
                            ‚ö†Ô∏è RoboSharp requires Windows and uses native system APIs. Performance may vary based on hardware and network conditions.
                        </TextBlock>
                    </StackPanel>
                </GroupBox>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="{StaticResource LightBackgroundBrush}" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="ResetButton" Click="ResetButton_Click" Style="{StaticResource ButtonStyle}" Background="{StaticResource WarningBrush}" Grid.Column="0">
                    <Button.ToolTip>
                        <ToolTip Background="Transparent" BorderThickness="0">
                            <control:AwesomeToolTip Title="Reset to Defaults" Description="This resets all settings to their default values." />
                        </ToolTip>
                    </Button.ToolTip>
                    <StackPanel Orientation="Horizontal">
                        <fa:IconBlock Icon="Redo" Foreground="{StaticResource BackgroundBrush}" FontSize="14" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Reset to Defaults" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
          
                    <Button x:Name="CancelButton" Click="CancelButton_Click" Style="{StaticResource ButtonStyle}" Background="{StaticResource SecondaryBrush}">
                        <Button.ToolTip>
                            <ToolTip Background="Transparent" BorderThickness="0">
                                <control:AwesomeToolTip Title="Cancel Changes" Description="This cancels any changes made and closes the settings window." />
                            </ToolTip>
                        </Button.ToolTip>
                        <StackPanel Orientation="Horizontal">
                            <fa:IconBlock Icon="Times" Foreground="{StaticResource BackgroundBrush}" FontSize="14" Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Cancel" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="SaveButton" Click="SaveButton_Click" Style="{StaticResource SuccessButtonStyle}">
                        <Button.ToolTip>
                            <ToolTip Background="Transparent" BorderThickness="0">
                                <control:AwesomeToolTip Title="Save Settings" Description="This saves the current settings and applies them to the application." />
                            </ToolTip>
                        </Button.ToolTip>
                        <StackPanel Orientation="Horizontal">
                            <fa:IconBlock Icon="Save" Foreground="{StaticResource BackgroundBrush}" FontSize="14" Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Save Settings" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
