<Window x:Class="DataTransferApp.Net.Views.TransferHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:local="clr-namespace:DataTransferApp.Net.Views"
        xmlns:helpers="clr-namespace:DataTransferApp.Net.Helpers"
        mc:Ignorable="d"
        Title="Transfer History" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">
    
    <Window.Resources>
        <helpers:FileSizeConverter x:Key="FileSizeConverter"/>
        <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <helpers:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <helpers:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#E74C3C"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Logo and Title -->
        <Border Grid.Row="0" Background="{StaticResource DarkBrush}" Padding="15,10">    
            <StackPanel Orientation="Horizontal">
                <!-- <Image Source="/app.png" Width="64" Height="64" Margin="0,0,15,0"/> -->
                <fa:IconBlock Icon="History" Foreground="{StaticResource BackgroundBrush}" FontSize="30" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding PageTitle}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource BackgroundBrush}"/>
                    <TextBlock Text="{Binding PageDescription}" FontSize="12"  Foreground="{StaticResource LightBrush}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Statistics -->
        <Border Grid.Row="1" Background="White" BorderBrush="{StaticResource LightBrush}" BorderThickness="0,0,0,1" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Total Transfers: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding TotalTransfers}" Foreground="{StaticResource PrimaryBrush}" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Today: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding TodayTransfers}" Foreground="{StaticResource SuccessBrush}" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="This Week: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding ThisWeekTransfers}" Foreground="{StaticResource InfoBrush}" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <TextBlock Text="Total Files: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding TotalFiles}" Foreground="{StaticResource PrimaryBrush}" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Search Bar -->
        <Border Grid.Row="2" Background="White" BorderBrush="{StaticResource LightBrush}" BorderThickness="0,0,0,1" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" 
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="10,8"
                         FontSize="12"
                         VerticalContentAlignment="Center">
                    <TextBox.InputBindings>
                        <KeyBinding Command="{Binding SearchTransfersCommand}" Key="Return"/>
                    </TextBox.InputBindings>
                </TextBox>

                <Button Grid.Column="1"  Style="{StaticResource ButtonStyle}" Command="{Binding SearchTransfersCommand}" Width="100" Margin="5,0">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconBlock Icon="Search" Foreground="{StaticResource BackgroundBrush}" FontSize="14" Margin="0,0,5,0"/>
                        <TextBlock Text="Search" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="2"  Style="{StaticResource ButtonStyle}"  Command="{Binding LoadTransfersCommand}" Width="100" Margin="5,0">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconBlock Icon="Refresh" Foreground="{StaticResource BackgroundBrush}" FontSize="14" Margin="0,0,5,0"/>
                        <TextBlock Text="Refresh" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="3" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Transfer List -->
            <Border Grid.Column="0" Background="White" BorderBrush="{StaticResource LightBrush}" BorderThickness="1" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{StaticResource LightBackgroundBrush}" Padding="10" BorderBrush="{StaticResource LightBrush}" BorderThickness="0,0,0,1">
                        <TextBlock Text="Transfer Records" FontWeight="SemiBold" FontSize="14"/>
                    </Border>

                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding Transfers}"
                              SelectedItem="{Binding SelectedTransfer}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single">

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="1"/>
                                <Setter Property="Margin" Value="1"/>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Width="*" Binding="{Binding TransferInfo.Date, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}"/>
                            <DataGridTextColumn Header="DTA" Width="*" Binding="{Binding TransferInfo.DTA}"/>
                            <DataGridTextColumn Header="Folder" Width="2*" Binding="{Binding TransferInfo.FolderName}"/>
                            <DataGridTextColumn Header="Employee" Width="*" Binding="{Binding TransferInfo.Employee}"/>
                            <DataGridTextColumn Header="Origin" Width="4*" Binding="{Binding TransferInfo.Origin}"/>
                            <DataGridTextColumn Header="Destination" Width="2*" Binding="{Binding TransferInfo.Destination}"/>
                            <DataGridTextColumn Header="Files" Width="*" Binding="{Binding Summary.TotalFiles}"/>
                            <DataGridTextColumn Header="Status" Width="*" Binding="{Binding Summary.Status}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Transfer Details -->
            <Border Grid.Column="1" Background="White" BorderBrush="{StaticResource LightBrush}" BorderThickness="1" Margin="5,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{StaticResource LightBackgroundBrush}" Padding="10" BorderBrush="{StaticResource LightBrush}" BorderThickness="0,0,0,1">
                        <DockPanel LastChildFill="True">
                            <Button DockPanel.Dock="Right"  Background="Transparent" BorderBrush="Transparent" Padding="0" Margin="0" Grid.Column="2" Command="{Binding DeleteTransferCommand}" IsEnabled="{Binding IsDeleteEnabled}" ToolTip="Delete Transfer">
                                <Button.Content>
                                    <fa:IconBlock Icon="trash" FontSize="14" Foreground="Red"/>
                                </Button.Content>
                            </Button>
                            <TextBlock Text="Transfer Details" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
                        </DockPanel>
                    </Border>

                    <!-- Details Info -->
                    <StackPanel Grid.Row="1" Margin="10" DataContext="{Binding SelectedTransfer}">
                        <TextBlock FontWeight="SemiBold" Margin="0,5,0,2">
                            <Run Text="Folder: "/>
                            <Run Text="{Binding TransferInfo.FolderName, Mode=OneWay}" Foreground="{StaticResource PrimaryBrush}"/>
                        </TextBlock>
                        <TextBlock Margin="0,2">
                            <Run Text="DTA: "/>
                            <Run Text="{Binding TransferInfo.DTA, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock Margin="0,2">
                            <Run Text="Employee: "/>
                            <Run Text="{Binding TransferInfo.Employee, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock Margin="0,2">
                            <Run Text="Date: "/>
                            <Run Text="{Binding TransferInfo.Date, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}', Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock Margin="0,2">
                            <Run Text="Origin: "/>
                            <Run Text="{Binding TransferInfo.Origin, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock Margin="0,2">
                            <Run Text="Destination: "/>
                            <Run Text="{Binding TransferInfo.Destination, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock Margin="0,2">
                            <Run Text="Total Files: "/>
                            <Run Text="{Binding Summary.TotalFiles, Mode=OneWay}" FontWeight="Bold"/>
                        </TextBlock>
                        <TextBlock Margin="0,2">
                            <Run Text="Total Size: "/>
                            <Run Text="{Binding Summary.TotalSize, Converter={StaticResource FileSizeConverter}, Mode=OneWay}" FontWeight="Bold"/>
                        </TextBlock>
                        <TextBlock Margin="0,2">
                            <Run Text="Status: "/>
                            <Run Text="{Binding Summary.Status, Mode=OneWay}" Foreground="{StaticResource SuccessBrush}" FontWeight="Bold"/>
                        </TextBlock>

                        <!-- RoboSharp Statistics (visible only for RoboSharp transfers) -->
                        <Expander Margin="0,10,0,0" IsExpanded="False" Visibility="{Binding IsRoboSharpTransfer, Converter={StaticResource BooleanToVisibilityConverter}}" ToolTip="Detailed statistics from RoboSharp logs, including any errors encountered during the transfer.">
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal" Margin="5,0,0,0">
                                    <fa:IconBlock Icon="Bolt" Foreground="{StaticResource PrimaryBrush}" FontSize="14" Margin="0,0,5,0"/>
                                    <TextBlock Text="RoboSharp Transfer Statistics" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="{StaticResource PrimaryBrush}"/>
                                </StackPanel>
                            </Expander.Header>
                            <Border Padding="10" 
                                    Background="{StaticResource LightBrush}" 
                                    CornerRadius="5"
                                    Margin="0,5,0,0">
                                <StackPanel>
                                    <TextBlock Margin="0,2">
                                        <Run Text="Transfer Method: "/>
                                        <Run Text="{Binding Summary.TransferMethod, Mode=OneWay}" FontWeight="SemiBold"/>
                                    </TextBlock>
                                    
                                    <TextBlock Margin="0,2">
                                        <Run Text="Duration: "/>
                                        <Run Text="{Binding Summary.Duration, StringFormat='{}{0:hh\\:mm\\:ss}', Mode=OneWay}" FontWeight="SemiBold"/>
                                    </TextBlock>

                                    <TextBlock Margin="0,2" Visibility="{Binding Summary.FormattedSpeed, Converter={StaticResource NullToVisibilityConverter}}">
                                        <Run Text="Average Speed: "/>
                                        <Run Text="{Binding Summary.FormattedSpeed, Mode=OneWay}" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}"/>
                                    </TextBlock>

                                    <TextBlock Margin="0,2">
                                        <Run Text="Files Copied: "/>
                                        <Run Text="{Binding Summary.FilesCopied, Mode=OneWay}" Foreground="{StaticResource SuccessBrush}" FontWeight="SemiBold"/>
                                    </TextBlock>

                                    <TextBlock Margin="0,2">
                                        <Run Text="Files Skipped: "/>
                                        <Run Text="{Binding Summary.FilesSkipped, Mode=OneWay}"/>
                                    </TextBlock>

                                    <TextBlock Margin="0,2" Visibility="{Binding Summary.FilesFailed, Converter={StaticResource NullToVisibilityConverter}}">
                                        <Run Text="Files Failed: "/>
                                        <Run Text="{Binding Summary.FilesFailed, Mode=OneWay}" Foreground="{StaticResource ErrorBrush}" FontWeight="Bold"/>
                                    </TextBlock>

                                    <TextBlock Margin="0,2">
                                        <Run Text="Directories Copied: "/>
                                        <Run Text="{Binding Summary.DirectoriesCopied, Mode=OneWay}"/>
                                    </TextBlock>

                                    <TextBlock Margin="0,2">
                                        <Run Text="Bytes Copied: "/>
                                        <Run Text="{Binding Summary.BytesCopied, Converter={StaticResource FileSizeConverter}, Mode=OneWay}" FontWeight="SemiBold"/>
                                    </TextBlock>

                                    <TextBlock Margin="0,2">
                                        <Run Text="Exit Code: "/>
                                        <Run Text="{Binding Summary.RobocopyExitCode, Mode=OneWay}"/>
                                        <Run Text=" " />
                                        <Run Text="(1 = Success, 0 = No files copied, 8+ = Errors)" 
                                             FontSize="10" 
                                             Foreground="{StaticResource FootNoteDarkBrush}"/>
                                    </TextBlock>

                                    <!-- Errors (if any) -->
                                    <Border Margin="0,5,0,0" 
                                            Padding="8" 
                                            Background="#FFFFE0E0" 
                                            CornerRadius="3"
                                            Visibility="{Binding HasErrors, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel>
                                            <TextBlock FontWeight="SemiBold" Foreground="{StaticResource ErrorBrush}" Margin="0,0,0,3">
                                                <Run Text="⚠ Errors:"/>
                                            </TextBlock>
                                            <ItemsControl ItemsSource="{Binding Summary.Errors}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding}" 
                                                                   TextWrapping="Wrap" 
                                                                   Foreground="{StaticResource ErrorBrush}"
                                                                   FontSize="11"
                                                                   Margin="0,2"/>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </Expander>
                    </StackPanel>

                    <!-- Files List -->
                    <Border Grid.Row="2" BorderBrush="{StaticResource LightBrush}" BorderThickness="0,1,0,0" Margin="10,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Header with toggle button -->
                            <Grid Grid.Row="0" Margin="0,10,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="Files" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                
                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                    <RadioButton Content="List" 
                                                 IsChecked="{Binding ShowTableView, Converter={StaticResource InverseBooleanConverter}}"
                                                 Margin="0,0,10,0"
                                                 VerticalAlignment="Center"/>
                                    <RadioButton Content="Table" 
                                                 IsChecked="{Binding ShowTableView}"
                                                 VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- List View -->
                            <ListBox Grid.Row="1" 
                                     ItemsSource="{Binding TransferFiles}"
                                     BorderThickness="0"
                                     Visibility="{Binding ShowTableView, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,5">
                                            <TextBlock Text="{Binding FileName}" FontWeight="SemiBold"/>
                                            <TextBlock FontSize="10" Foreground="{StaticResource SecondaryBrush}">
                                                <Run Text="{Binding Extension}"/>
                                                <Run Text=" • "/>
                                                <Run Text="{Binding Size, Converter={StaticResource FileSizeConverter}}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            
                            <!-- Table View -->
                            <DataGrid Grid.Row="1"
                                      ItemsSource="{Binding TransferFiles}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="Horizontal"
                                      AlternatingRowBackground="{StaticResource LightBackgroundBrush}"
                                      BorderThickness="0"
                                      Visibility="{Binding ShowTableView, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="2*"/>
                                    <DataGridTextColumn Header="Extension" Binding="{Binding Extension}" Width="*"/>
                                    <DataGridTextColumn Header="Size" Binding="{Binding Size, Converter={StaticResource FileSizeConverter}}" Width="*"/>
                                    <DataGridTextColumn Header="Hash" Binding="{Binding FileHash}" Width="2*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="4" Background="{StaticResource LightBackgroundBrush}" BorderBrush="{StaticResource LightBrush}" BorderThickness="0,1,0,0" Padding="15,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Database Location: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding HistoryDbLocation}" Foreground="{StaticResource PrimaryBrush}" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Health: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding HistoryDbHealth}" Foreground="{StaticResource SuccessBrush}" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
