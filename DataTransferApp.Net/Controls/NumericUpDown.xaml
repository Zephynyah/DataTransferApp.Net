<UserControl x:Class="DataTransferApp.Net.Controls.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             x:Name="Root">
    <Border BorderBrush="{StaticResource LightBrush}" 
            BorderThickness="1" 
            CornerRadius="4"
            Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- TextBox for value input -->
            <TextBox Grid.Column="0" 
                     x:Name="ValueTextBox"
                     Text="{Binding Value, ElementName=Root, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     BorderThickness="0"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Right"
                     Padding="8,4"
                     Margin="0"
                     Background="Transparent"
                     PreviewTextInput="ValueTextBox_PreviewTextInput"
                     TextChanged="ValueTextBox_TextChanged">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="4,0,0,4"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            
            <!-- Up/Down buttons inline -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="DownButton"
                        Click="DownButton_Click"
                        BorderThickness="0,0,0,0"
                        Background="Transparent"
                        Width="18"
                        Padding="2"
                        ToolTip="Decrease">
                    <fa:IconBlock Icon="Minus" FontSize="8" Foreground="{StaticResource DarkBrush}"/>
                </Button>
                <Separator Width="1" Background="{StaticResource LightBrush}" Margin="0"/>
                <Button x:Name="UpButton"
                        Click="UpButton_Click"
                        BorderThickness="0,0,0,0"
                        Background="Transparent"
                        Width="18"
                        Padding="2"
                        ToolTip="Increase">
                    <fa:IconBlock Icon="Plus" FontSize="8" Foreground="{StaticResource DarkBrush}"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
