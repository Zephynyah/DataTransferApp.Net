<UserControl x:Class="DataTransferApp.Net.Controls.SettingsItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root">

    <Border Background="White"  BorderBrush="{StaticResource LightBrush}"  BorderThickness="1"  CornerRadius="6"  Padding="16,6" Margin="0,0,0,8">
        <Border.Effect>
            <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.1" Color="#000000"/>
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left side: Title and Description -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="{Binding Title, ElementName=Root}" 
                           FontWeight="SemiBold" 
                           FontSize="14"
                           Foreground="{StaticResource DarkBrush}"
                           TextWrapping="Wrap"/>
                <TextBlock Text="{Binding Description, ElementName=Root}" 
                           FontSize="11" 
                           FontStyle="Italic"
                           Foreground="{StaticResource FootNoteLightBrush}"
                           TextWrapping="Wrap"
                           Margin="0,4,0,0"
                           Visibility="{Binding Description, ElementName=Root, Converter={StaticResource StringToVisibilityConverter}}"/>
            </StackPanel>
            
            <!-- Right side: Control (Footer) -->
            <ContentPresenter Grid.Column="1" 
                              Content="{Binding Footer, ElementName=Root}" 
                              VerticalAlignment="Center"
                              Margin="20,0,0,0"/>
        </Grid>
    </Border>
</UserControl>
