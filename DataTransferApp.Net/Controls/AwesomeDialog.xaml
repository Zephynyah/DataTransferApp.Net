<UserControl x:Class="DataTransferApp.Net.Controls.AwesomeDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             x:Name="DialogControl"
             Background="Transparent"
             Focusable="True"
             RenderTransformOrigin="0.5,0.5">

    <UserControl.Resources>
        <!-- Pop In Animation -->
        <Storyboard x:Key="PopInAnimation">
            <!-- Scale from 80% to 100% with bounce -->
            <DoubleAnimation Storyboard.TargetName="DialogBox" 
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="0.8" To="1.0" Duration="0:0:0.35">
                <DoubleAnimation.EasingFunction>
                    <BackEase Amplitude="0.3" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="DialogBox" 
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="0.8" To="1.0" Duration="0:0:0.35">
                <DoubleAnimation.EasingFunction>
                    <BackEase Amplitude="0.3" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <!-- Fade in the dialog box -->
            <DoubleAnimation Storyboard.TargetName="DialogBox" 
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.25"/>
            <!-- Fade in the background overlay -->
            <DoubleAnimation Storyboard.TargetName="Overlay" 
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.2"/>
        </Storyboard>
        
        <!-- Pop Out Animation -->
        <Storyboard x:Key="PopOutAnimation">
            <DoubleAnimation Storyboard.TargetName="DialogBox" 
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="1.0" To="0.8" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="DialogBox" 
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="1.0" To="0.8" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="DialogBox" 
                             Storyboard.TargetProperty="Opacity"
                             From="1" To="0" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetName="Overlay" 
                             Storyboard.TargetProperty="Opacity"
                             From="1" To="0" Duration="0:0:0.2"/>
        </Storyboard>

        <!-- Button Style -->
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderThickness="1"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- The Background Overlay (Dimmer) -->
        <Border x:Name="Overlay" 
                Background="#CC000000" 
                Opacity="0" 
                MouseLeftButtonDown="OnOverlayClicked"/>
        
        <!-- The Dialog Box -->
        <Border x:Name="DialogBox" 
                Background="White" 
                Width="400" 
                MaxWidth="450"
                VerticalAlignment="Center" 
                RenderTransformOrigin="0.5,0.5" 
                CornerRadius="16" 
                Padding="30,25"
                Opacity="0">
            <!-- Start with the dialog scaled down (invisible) -->
            <Border.RenderTransform>
                <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
            </Border.RenderTransform>
            <!-- Drop Shadow Effect -->
            <Border.Effect>
                <DropShadowEffect BlurRadius="40" ShadowDepth="0" Opacity="0.3" Color="#000000"/>
            </Border.Effect>

            <StackPanel>
                <!-- Icon with gradient background -->
                <Border Background="#F0F7FF" 
                        CornerRadius="50" 
                        Width="64" 
                        Height="64" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,15">
                    <fa:IconBlock Icon="{Binding Icon, ElementName=DialogControl}"  
                                  FontSize="32" 
                                  Foreground="#007ACC" 
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                </Border>
                
                <!-- Title -->
                <TextBlock Text="{Binding Title, ElementName=DialogControl}"  
                           FontSize="20" 
                           FontWeight="SemiBold" 
                           TextAlignment="Center"
                           Foreground="#1a1a1a"
                           Margin="0,0,0,8"/>
                
                <!-- Message -->
                <TextBlock Text="{Binding Message, ElementName=DialogControl}"  
                           FontSize="14" 
                           Foreground="#5a5a5a" 
                           Margin="0,0,0,20"  
                           TextWrapping="Wrap" 
                           TextAlignment="Center"
                           LineHeight="20"/>
                
                <!-- Buttons -->
                <Grid Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button x:Name="CancelButton"
                            Content="Cancel" 
                            Click="Cancel_Click" 
                            Grid.Column="0"
                            Style="{StaticResource DialogButtonStyle}"
                            Background="#f5f5f5"
                            Foreground="#333333"
                            BorderBrush="#e0e0e0"
                            BorderThickness="1"/>
                    
                    <Button x:Name="ConfirmButton"
                            Content="Confirm" 
                            Click="Confirm_Click" 
                            Grid.Column="2"
                            Style="{StaticResource DialogButtonStyle}"
                            Background="#007ACC" 
                            Foreground="White"
                            IsDefault="True"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>