<UserControl x:Class="DataTransferApp.Net.Controls.ModernToolTip"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        x:Name="ParentControl"
        Background="Transparent">

    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="8" Padding="12" BorderThickness="1" BorderBrush="#444">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
        </Border.Effect>
        <StackPanel Width="200">
            <!-- Header with Icon -->
            <DockPanel Margin="0,0,0,8">
                <fa:IconBlock Icon="{Binding Icon, ElementName=ParentControl}" Foreground="#007ACC" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="{Binding Title, ElementName=ParentControl}" FontWeight="Bold" FontSize="14"/>
            </DockPanel>
            <!-- Separator -->
            <Separator Background="{StaticResource SecondaryBrush}" Margin="0,0,0,8"/>
            <!-- Description Body -->
            <TextBlock Text="{Binding Description, ElementName=ParentControl}" TextWrapping="Wrap" FontSize="12" LineHeight="18"/>
        </StackPanel>
    </Border>
</UserControl>