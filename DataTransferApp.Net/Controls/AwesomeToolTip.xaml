<UserControl x:Class="DataTransferApp.Net.Controls.AwesomeToolTip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             Background="Transparent">

    <Border Background="#2D2D30" BorderBrush="#007ACC" BorderThickness="2" CornerRadius="8" Padding="10" MaxWidth="300" MinWidth="200">

        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
        </Border.Effect>

        <StackPanel>
            <!-- Header with icon -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <fa:IconBlock Icon="File" FontSize="16" Margin="0,0,8,0" Foreground="{StaticResource PrimaryBrush}"/>
                <TextBlock Text="{Binding FileName}" FontWeight="Bold" FontSize="14"/>
            </StackPanel>
            
             <Separator Background="#3F3F46" Margin="0,5"/>
            
            <!-- File info -->
            <TextBlock FontSize="11" Foreground="Gray" Margin="0,0,0,3" FontStyle="Italic">
                <Run Text="Path: "/>
                <Run Text="{Binding FullPath}" />
            </TextBlock>
            <TextBlock FontSize="11" Foreground="Gray" Margin="0,0,0,8" FontStyle="Italic">
                <Run Text="Size: "/>
                <Run Text="{Binding SizeFormatted}" />
            </TextBlock>
            
            <!-- Blacklist warning -->
            <!-- <Border Background="#FFF3CD" Padding="8" CornerRadius="3" Margin="0,0,0,5" Visibility="{Binding IsBlacklisted, Converter={StaticResource BooleanToVisibilityConverter}}">
