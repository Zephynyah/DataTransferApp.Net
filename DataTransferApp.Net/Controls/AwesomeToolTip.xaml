<UserControl x:Class="DataTransferApp.Net.Controls.AwesomeToolTip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             Background="Transparent">

    <Border Background="{StaticResource BackgroundBrush}" BorderBrush="#007ACC" BorderThickness="2" CornerRadius="8" Padding="10" MaxWidth="400" MinWidth="300">

        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
        </Border.Effect>

        <StackPanel>
            <!-- Header with icon -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <fa:IconBlock Icon="File" FontSize="18" Margin="0,0,10,0" Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding FileName}" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" TextWrapping="Wrap"/>
            </StackPanel>
            
             <Separator Background="{StaticResource SecondaryBrush}" Margin="0,5"/>
            
     
            <!-- File details -->
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <fa:IconBlock Grid.Row="0" Grid.Column="0" Icon="FolderOpen" FontSize="12" Margin="0,0,8,4" Foreground="Gray"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding FullPath}" FontSize="11" Foreground="Gray" Margin="0,0,0,4" TextWrapping="Wrap"/>
                
                <fa:IconBlock Grid.Row="1" Grid.Column="0" Icon="Database" FontSize="12" Margin="0,0,8,4" Foreground="Gray"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SizeFormatted}" FontSize="11" Foreground="Gray" Margin="0,0,0,4"/>
                
                <fa:IconBlock Grid.Row="2" Grid.Column="0" Icon="Tag" FontSize="12" Margin="0,0,8,0" Foreground="Gray"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Extension}" FontSize="11" Foreground="Gray"/>
            </Grid>

            <StackPanel>
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsBlacklisted}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>

                <Border Background="#F8D7DA" Padding="10" CornerRadius="4" Margin="0,0,0,6">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <fa:IconBlock Icon="Ban" Foreground="#721C24" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Blacklisted File Type" FontWeight="Bold" Foreground="#721C24" FontSize="13" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Foreground="#721C24" FontSize="11" TextWrapping="Wrap" Margin="24,0,0,6">
                            <Run Text="This file extension is not allowed for transfer."/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <Border Background="#E8DEF8" Padding="10" CornerRadius="4" Margin="0,0,0,6">
                    <StackPanel>
                         <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <fa:IconBlock Icon="UserCircle" Foreground="#4A148C" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Recommended Actions" FontWeight="Bold" Foreground="#4A148C" FontSize="13" VerticalAlignment="Center"/>
                        </StackPanel>

                        <ItemsControl ItemsSource="{Binding Recommendations}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="24,0,0,2">
                                        <fa:IconBlock Icon="CheckCircle" Foreground="#4A148C" FontSize="12" Margin="0,0,6,0" VerticalAlignment="Top"/>
                                        <TextBlock Text="{Binding}" FontSize="11" FontStyle="Italic" Foreground="#4A148C" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
            
