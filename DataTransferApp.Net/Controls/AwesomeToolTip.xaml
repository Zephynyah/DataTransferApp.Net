<UserControl x:Class="DataTransferApp.Net.Controls.AwesomeToolTip"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        x:Name="ToolTipControl"
        Background="Transparent">

     <UserControl.Triggers>
        <EventTrigger RoutedEvent="UserControl.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <!-- Fade In -->
                    <DoubleAnimation Storyboard.TargetName="ToolTipControl" Storyboard.TargetProperty="Opacity" From="0.0" To="1.0"  Duration="0:0:0.3"/>
                    <!-- Subtle Slide Up -->
                    <DoubleAnimation Storyboard.TargetName="TooltipTransform" Storyboard.TargetProperty="Y" From="10" To="0"  Duration="0:0:0.3">
                        <DoubleAnimation.EasingFunction>
                            <PowerEase Power="3" EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>

    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="8" Padding="12" BorderThickness="1" BorderBrush="#444">
        <Border.RenderTransform>
            <TranslateTransform x:Name="TooltipTransform" />
        </Border.RenderTransform>
        <!-- Border Effect -->
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
        </Border.Effect>
        <StackPanel Width="200">
            <!-- Header with Icon -->
            <DockPanel Margin="0,0,0,8">
                <fa:IconBlock Icon="{Binding Icon, ElementName=ToolTipControl}" Foreground="#007ACC" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="{Binding Title, ElementName=ToolTipControl}" FontWeight="Bold" FontSize="14"/>
            </DockPanel>
            <!-- Separator -->
            <Separator Background="{StaticResource SecondaryBrush}" Margin="0,0,0,8"/>
            <!-- Description Body -->
            <TextBlock Text="{Binding Description, ElementName=ToolTipControl}" TextWrapping="Wrap" FontSize="12" LineHeight="18"/>
        </StackPanel>
    </Border>
</UserControl>