<UserControl x:Class="DataTransferApp.Net.Controls.AwesomeToolTip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             x:Name="ToolTipControl"
             Background="Transparent">

    <Border Background="{StaticResource BackgroundBrush}" BorderBrush="#007ACC" BorderThickness="2" CornerRadius="8" Padding="10" MaxWidth="500" Width="Auto">

        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
        </Border.Effect>

         <StackPanel Width="200">
            <!-- Header with Icon -->
            <DockPanel Margin="0,0,0,8">
                <Ellipse Width="12" Height="12" Fill="#007ACC" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="Action Required" Foreground="White" FontWeight="Bold" FontSize="14"/>
            </DockPanel>
            
            <Separator Background="#444" Margin="0,0,0,8"/>
            
            <!-- Description Body -->
            <TextBlock Text="This tooltip supports multi-line text and custom styling for a professional look."  Foreground="#BBB" TextWrapping="Wrap" FontSize="12" LineHeight="18"/>
        </StackPanel>
    </Border>
</UserControl>
