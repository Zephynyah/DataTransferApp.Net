<UserControl x:Class="DataTransferApp.Net.Controls.AwesomeToolTip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             Background="Transparent">

    <Border Background="#2D2D30" BorderBrush="#007ACC" BorderThickness="2" CornerRadius="8" Padding="10" MaxWidth="300">

        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
        </Border.Effect>

        <StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,5">
                <fa:IconBlock Icon="ExclamationTriangle" Foreground="#FFCC00" FontSize="20" Margin="0,0,10,0"/>
                <TextBlock Text="Warnings! tes" FontSize="14" FontWeight="Bold" Foreground="#FFCC00"/>
            </StackPanel>
            <!-- <TextBlock Text="{Binding Title}" FontSize="14"  FontWeight="Bold" Foreground="#007ACC" Margin="0,0,0,5"/> -->

            <Separator Background="#3F3F46" Margin="0,5"/>

            <DockPanel>
                <fa:IconBlock Icon="InfoCircle" Foreground="#007ACC" VerticalAlignment="Top" Margin="0,0,10,0" FontSize="24"/>
                <TextBlock Text="{Binding Description}"  TextWrapping="Wrap"  Foreground="White" FontSize="12"/>
            </DockPanel>

        </StackPanel>

    </Border>
</UserControl>
